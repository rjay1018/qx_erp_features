<odoo>
    <record id="view_serial_update_wizard_form" model="ir.ui.view">
        <field name="name">serial.update.wizard.form</field>
        <field name="model">serial.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Serial/Lot Inbound Update">
                <!-- Main Content -->
                <sheet>
                    <!-- Product Selection -->
                    <group>
                        <field name="product_id" readonly="1"/>
                        <field name="location_id"/>
                    </group>

                    <!-- Scanned Serials -->
                    <group>
                        <label for="scanned_serials" string="Scan Serial Numbers"/>
                        <field name="scanned_serials" widget="barcode_scanner" nolabel="1"/>
                    </group>

                    <!-- Invalid/Duplicate Serials -->
                    <group>
                        <label for="invalid_serials" string="Invalid/Duplicate Serials"/>
                        <field name="invalid_serials" readonly="1" nolabel="1" widget="textarea"/>
                    </group>
                </sheet>

                <!-- Footer Buttons -->
                <footer>
                    <!-- Create Button -->
                    <button string="Create" type="object" name="action_create_stock_quants" class="btn-primary"/>

                    <!-- Cancel Button -->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</>