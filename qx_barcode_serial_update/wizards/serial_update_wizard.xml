<odoo> 
    <record id="view_serial_update_wizard_form" model="ir.ui.view"> 
        <field name="name">serial.update.wizard.form</field> 
        <field name="model">serial.update.wizard</field> 
        <field name="arch" type="xml"> 
            <form string="Serial/Lot Inbound Update"> 
                <group> 
                    <field name="product_id" readonly="1"/> 
                    <field name="scanned_serials" widget="textarea"/> 
                    <field name="lot_ids" readonly="1"/> 
                </group> 
                <footer> 
                    <button string="Update Quantity" type="object" name="update_quantity" class="btn-primary"/> 
                    <button string="Cancel" class="btn-secondary" special="cancel"/> 
                </footer> 
            </form> 
        </field> 
    </record> 
</odoo> 
