<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Daily Log views -->
        <record id="view_construction_daily_log_tree" model="ir.ui.view">
            <field name="name">construction.daily.log.tree</field>
            <field name="model">construction.daily.log</field>
            <field name="arch" type="xml">
                <tree string="Daily Logs">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="view_construction_daily_log_form" model="ir.ui.view">
            <field name="name">construction.daily.log.form</field>
            <field name="model">construction.daily.log</field>
            <field name="arch" type="xml">
                <form string="Daily Log">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="date"/>
                        </group>
                        <notebook>
                            <page string="Work Diary">
                                <field name="work_diary"/>
                            </page>
                            <page string="Photos">
                                <field name="photos" widget="many2many_binary"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_construction_daily_log" model="ir.actions.act_window">
            <field name="name">Daily Logs</field>
            <field name="res_model">construction.daily.log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_construction_daily_log"
            name="Daily Logs"
            parent="project.menu_main_pm"
            action="action_construction_daily_log"
            sequence="20"/>

        <!-- RFI views -->
        <record id="view_construction_rfi_tree" model="ir.ui.view">
            <field name="name">construction.rfi.tree</field>
            <field name="model">construction.rfi</field>
            <field name="arch" type="xml">
                <tree string="RFIs">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_construction_rfi_form" model="ir.ui.view">
            <field name="name">construction.rfi.form</field>
            <field name="model">construction.rfi</field>
            <field name="arch" type="xml">
                <form string="RFI">
                    <header>
                        <button name="action_open" type="object" string="Open" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_close" type="object" string="Close" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'open')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,closed"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                        </group>
                        <notebook>
                            <page string="Question">
                                <field name="question"/>
                            </page>
                            <page string="Answer">
                                <field name="answer"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_construction_rfi" model="ir.actions.act_window">
            <field name="name">RFIs</field>
            <field name="res_model">construction.rfi</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_construction_rfi"
            name="RFIs"
            parent="project.menu_main_pm"
            action="action_construction_rfi"
            sequence="30"/>
    </data>
</odoo>
