<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Request views -->
        <record id="view_construction_purchase_request_tree" model="ir.ui.view">
            <field name="name">construction.purchase.request.tree</field>
            <field name="model">construction.purchase.request</field>
            <field name="arch" type="xml">
                <tree string="Purchase Requests">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_construction_purchase_request_form" model="ir.ui.view">
            <field name="name">construction.purchase.request.form</field>
            <field name="model">construction.purchase.request</field>
            <field name="arch" type="xml">
                <form string="Purchase Request">
                    <header>
                        <button name="action_to_approve" type="object" string="Submit for Approval" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" type="object" string="Approve" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'to_approve')]}"/>
                        <button name="action_done" type="object" string="Done" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                        <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="task_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_construction_purchase_request" model="ir.actions.act_window">
            <field name="name">Purchase Requests</field>
            <field name="res_model">construction.purchase.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_construction_purchase_request"
            name="Purchase Requests"
            parent="purchase.menu_purchase_root"
            action="action_construction_purchase_request"
            sequence="10"/>

        <!-- Inherit the stock location form view to add new fields -->
        <record id="view_stock_location_form_inherited" model="ir.ui.view">
            <field name="name">stock.location.form.inherited</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='usage']" position="after">
                    <field name="project_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
