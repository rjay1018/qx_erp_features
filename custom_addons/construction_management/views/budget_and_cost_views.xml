<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the project form view to add new fields -->
        <record id="view_project_form_inherited_budget" model="ir.ui.view">
            <field name="name">project.project.form.inherited.budget</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="actual_vs_forecast"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit the cost sheet form view to add new fields -->
        <record id="view_construction_cost_sheet_form_inherited" model="ir.ui.view">
            <field name="name">construction.cost.sheet.form.inherited</field>
            <field name="model">construction.cost.sheet</field>
            <field name="inherit_id" ref="construction_management.view_construction_cost_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <field name="subcontractor_costs"/>
                    <field name="material_costs"/>
                    <field name="labor_costs"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit the purchase order form view to add new fields -->
        <record id="view_purchase_order_form_inherited" model="ir.ui.view">
            <field name="name">purchase.order.form.inherited</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="project_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
