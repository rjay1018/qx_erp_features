<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the employee form view to add new fields -->
        <record id="view_employee_form_inherited" model="ir.ui.view">
            <field name="name">hr.employee.form.inherited</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Projects">
                        <field name="project_ids"/>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Inherit the timesheet form view to add new fields -->
        <record id="view_account_analytic_line_form_inherited" model="ir.ui.view">
            <field name="name">account.analytic.line.form.inherited</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.view_account_analytic_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit_amount']" position="after">
                    <field name="overtime"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
