<odoo>
    <record id="view_serial_inbound_wizard_form" model="ir.ui.view">
        <field name="name">serial.inbound.wizard.form</field>
        <field name="model">serial.inbound.wizard</field>
        <field name="arch" type="xml">
            <form string="Serial Scanner">
                <group>
                    <field name="picking_id" readonly="1"/>
                    <field name="last_scanned" placeholder="Scan serial here"/>
                    <field name="scanned_serials" widget="text" readonly="1"/>
                </group>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
