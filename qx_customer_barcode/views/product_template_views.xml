<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Template Form -->
    <record id="view_product_template_form_inherit_customer_barcodes" model="ir.ui.view">
        <field name="name">product.template.form.customer.barcodes.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_open_customer_barcodes"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-barcode">
                    <field name="customer_barcode_count"
                           widget="statinfo"
                           string="Customer Barcodes"/>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Inherit Product Product (Variant) Form -->
    <record id="view_product_product_form_inherit_customer_barcodes" model="ir.ui.view">
        <field name="name">product.product.form.customer.barcodes.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_open_customer_barcodes"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-barcode">
                    <field name="customer_barcode_count"
                           widget="statinfo"
                           string="Customer Barcodes"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
