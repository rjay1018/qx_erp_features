<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend sale.order.line tree view inside order_line One2many -->
    <record id="view_order_line_tree_inherit_customer_barcode" model="ir.ui.view">
        <field name="name">sale.order.line.tree.customer.barcode</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="customer_barcode" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Extend sale.order.line form view inside order_line One2many -->
    <record id="view_order_line_form_inherit_customer_barcode" model="ir.ui.view">
        <field name="name">sale.order.line.form.customer.barcode</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="customer_barcode" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
