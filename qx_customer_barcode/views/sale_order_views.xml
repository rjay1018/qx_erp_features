<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Sales Order form to show customer barcode on lines -->
    <record id="view_order_form_inherit_customer_barcode" model="ir.ui.view">
        <field name="name">sale.order.form.customer.barcode</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Tree (list) view of order lines -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="customer_barcode" readonly="1"/>
            </xpath>

            <!-- Form view of order line -->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <field name="customer_barcode" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
