<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend sale.order form (order_line inline form only) -->
    <record id="view_order_form_inherit_customer_barcode_form" model="ir.ui.view">
        <field name="name">sale.order.form.customer.barcode.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='name']" position="after">
                <field name="customer_barcode" readonly="1" string="Cust. Barcode"/>
            </xpath>
        </field>
    </record>
</odoo>
