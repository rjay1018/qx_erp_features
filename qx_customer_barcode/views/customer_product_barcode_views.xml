<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_customer_product_barcode_tree" model="ir.ui.view">
        <field name="name">customer.product.barcode.tree</field>
        <field name="model">customer.product.barcode</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="product_tmpl_id"/>
                <field name="barcode"/>
            </tree>
        </field>
    </record>

    <record id="view_customer_product_barcode_form" model="ir.ui.view">
        <field name="name">customer.product.barcode.form</field>
        <field name="model">customer.product.barcode</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                    <field name="product_tmpl_id"/>
                    <field name="barcode"/>
                </group>
            </form>
        </field>
    </record>

    <menuitem id="menu_customer_product_barcode_root"
              name="Customer Product Barcodes"
              parent="product.menu_catalog"
              action="action_customer_product_barcode"/>
              
    <record id="action_customer_product_barcode" model="ir.actions.act_window">
        <field name="name">Customer Product Barcodes</field>
        <field name="res_model">customer.product.barcode</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
