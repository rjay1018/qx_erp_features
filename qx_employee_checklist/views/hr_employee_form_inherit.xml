<odoo>
    <record id="view_hr_employee_form_inherit_checklist_upload" model="ir.ui.view">
        <field name="name">hr.employee.form.checklist.upload</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_open_checklist_upload_wizard"
                        type="object"
                        string="Upload Checklist Document"
                        class="btn-primary"
                        attrs="{'invisible': [('id', '=', False)]}"/>
            </header>
        </field>
    </record>
</odoo>
