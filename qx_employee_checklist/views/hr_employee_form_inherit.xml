<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- âœ… Updated Checklist Tab -->
    <record model="ir.ui.view" id="hr_employee_inherit_form_view_checklist_tree">
        <field name="name">hr.employee.form.view.checklist.tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <page name="checklist" position="replace">
                <page name="checklist" string="Checklist">
                    <group>
                        <group string="Entry Checklist">
                            <field name="entry_document_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="document_name"/>
                                    <field name="doc_attachment_id"/>
                                    <field name="issue_date"/>
                                    <field name="description"/>
                                    <button name="action_open_upload_wizard"
                                            type="object"
                                            string="Upload"
                                            class="btn-primary"/>
                                </tree>
                            </field>
                        </group>

                        <group string="Exit Checklist">
                            <field name="exit_document_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="document_name"/>
                                    <field name="doc_attachment_id"/>
                                    <field name="issue_date"/>
                                    <field name="description"/>
                                    <button name="action_open_upload_wizard"
                                            type="object"
                                            string="Upload"
                                            class="btn-primary"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>

</odoo>

