<odoo>
    <record id="view_employee_checklist_document_wizard_form" model="ir.ui.view">
        <field name="name">employee.checklist.document.wizard.form</field>
        <field name="model">employee.checklist.document.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Checklist Document">
                <group>
                    <field name="employee_id" readonly="1"/>
                    <field name="checklist_item_id"/>
                    <field name="attachment" filename="attachment_filename"/>
                    <field name="description"/>
                </group>
                <footer>
                    <button string="Upload" name="action_upload" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
